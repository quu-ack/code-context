{
  "name": "code-context",
  "version": "0.1.0",
  "type": "module",
  "description": "Auto-documentation tool that tracks why your code exists",
  "main": "dist/index.js",
  "bin": {
    "code-context": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "documentation",
    "context",
    "git",
    "typescript",
    "developer-tools",
    "code-analysis"
  ],
  "author": "Quentin Ackermann",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "ora": "^8.1.1",
    "simple-git": "^3.27.0",
    "ts-morph": "^24.0.0",
    "ts-typed-errors": "^0.0.7",
    "@octokit/rest": "^21.0.2",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
